pipeline {
  agent  any
    stages {
      stage("build"){
        when{
          expression{
            env.BRANCH_NAME == 'br1'
           }
        }
        steps{
          echo "building the application..."
        }
      }

       stage("test"){
        steps{
          echo "testing the application..."
        }
      }

       stage("deploy"){
        steps{
          echo "deploying the application..."
        }
      }
   }
   post{
    always{
        echo "reached end.."
      }
    failure{
      echo "this won't be displayed in console"
      }
     success{
        echo "successfully executed..."
      }
   }
}
